{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target":"ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "lib": ["es5", "dom", "ES2015"],
        "outDir": "./dist",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        }
    },
    "include": [
        "./src/server/*.ts"
    ],
}